{
  "name": "asrar-alwasfa",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=asrar-alwasfa-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name asrar-alwasfa",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply asrar-alwasfa-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply asrar-alwasfa-production",
    "db:console:local": "wrangler d1 execute asrar-alwasfa-production --local",
    "db:console:prod": "wrangler d1 execute asrar-alwasfa-production",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "git:commit": "git add . && git commit -m"
  },
  "dependencies": {
    "hono": "^4.10.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}